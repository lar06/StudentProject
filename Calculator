#include <stdio.h>
#include <stdlib.h>
int main() {
	char sign = '+';
	char operation = 'v';
	float a, b, c, f = 1;
	int i, n, d;
	float *A = NULL, *B = NULL, sum, rezult;
    FILE *infile, *outfile;
    infile=fopen("/home/student/eclipse-workspace/File/infile.txt","r");
    outfile=fopen("/home/student/eclipse-workspace/File/outfile.txt","w");
	while (d != 0) {
		fscanf(infile,"%c",&operation);
		switch (operation) {
		case 'n':
			//Выбор операции
			if (sign == '+' || sign == '-' || sign == '*' || sign == '/'
					|| sign == 'f' || sign == '^') {
				fscanf(infile,"%c %c %f %f",&operation,&sign,&a,&b);
				switch (sign) {
				case '+':
					//Операция сложения
					fprintf(outfile,"%f", a + b);
					break;
				case '-':
					//Операция вычитания
					fprintf(outfile,"%f", a - b);
					break;
				case '*':
					//Операция умножения
					fprintf(outfile,"%f", a * b);
					break;
				case '/':
					//Операция деления
					fprintf(outfile,"%f", a / b);
					break;
				case 'f':
					//Вычесления факториала
					while (a > 0) {
						f = f * a;
						a--;
					}
					fprintf(outfile,"%f", f);
					break;
				case '^':
					//Возведение в степень
					c = a;
					while (b > 1) {
						a = a * c;
						b--;
					}
					fprintf(outfile,"%f", a);
					break;
				}
			} else
				printf("Wrong sign");
			    break;
		case 'v':
			//Выбор операции
			if (sign == '+' || sign == '-' || sign == '*') {
			        fscanf(infile,"%c %c %d",&operation,&sign,&n);
				switch (sign) {
				case '+':
					A = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
					        fscanf(infile,"%f", &A[i]);
					}
					B = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
					        fscanf(infile,"%f", &B[i]);
					}
					for (i = 0; i < n; i++) {
						fprintf(outfile,"%f", A[i] + B[i]);
					}
					break;
					free(A);
					free(B);
				case '-':
				      	A = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
					        fscanf(infile,"%f", &A[i]);
					}
					B = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
					        fscanf(infile,"%f", &B[i]);
					}
					for (i = 0; i < n; i++) {
						fprintf(outfile,"%f", A[i] - B[i]);
					}
					break;
					free(A);
					free(B);

				case '*':
					A = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
					        fscanf(infile,"%f", &A[i]);
					}
					B = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
					        fscanf(infile,"%f", &B[i]);
					}
					for (i = 0; i < n; i++) {
						rezult = A[i] * B[i];
						sum = sum + rezult;
					}
					fprintf(outfile,"%f", sum);
					break;
					free(A);
					free(B);
				}
			} else
				printf("Wrong sign");
			    break;
		}
		printf("Repeat?\n");
		scanf("%d", &d);
	}
	return 0;
	fclose(infile);
	fclose(outfile);
}

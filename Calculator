#include <stdio.h>
#include <stdlib.h>
int main() {
	char sign = '+';
	char operation = 'v';
	float a, b, c, f = 1;
	int i, n, d;
	float *A = NULL, *B = NULL, sum, rezult;
	while (d != 0) {
		printf("Enter type of operation\n");
		scanf("%c", &operation);
		switch (operation) {
		case 'n':
			//Выбор операции
			printf("Enter operation sign\n");
			printf("Sign: ");
			scanf(" %c", &sign);
			if (sign == '+' || sign == '-' || sign == '*' || sign == '/'
					|| sign == 'f' || sign == '^') {
				switch (sign) {
				case '+':
					//Операция сложения
					printf("Enter two number\n");
					printf("a=");
					scanf("%f", &a);
					printf("b=");
					scanf("%f", &b);
					printf("%f", a + b);
					break;
				case '-':
					//Операция вычитания
					printf("Enter two number\n");
					printf("a=");
					scanf("%f", &a);
					printf("b=");
					scanf("%f", &b);
					printf("%f", a - b);
					break;
				case '*':
					//Операция умножения
					printf("Enter two number\n");
					printf("a=");
					scanf("%f", &a);
					printf("b=");
					scanf("%f", &b);
					printf("%f", a * b);
					break;
				case '/':
					//Операция деления
					printf("Enter two number\n");
					printf("a=");
					scanf("%f", &a);
					printf("b=");
					scanf("%f", &b);
					printf("%f", a / b);
					break;
				case 'f':
					//Вычесления факториала
					printf("Enter a number\n");
					printf("a=");
					scanf("%f", &a);
					while (a > 0) {
						f = f * a;
						a--;
					}
					printf("%f", f);
					break;
				case '^':
					//Возведение в степень
					printf("Enter a number\n");
					printf("a=");
					scanf("%f", &a);
					printf("Enter a power\n");
					printf("b=");
					scanf("%f", &b);
					c = a;
					while (b > 1) {
						a = a * c;
						b--;
					}
					printf("%f", a);
					break;
				}
			} else
				printf("Wrong sign");
			    break;
		case 'v':
			//Выбор операции
			printf("Enter vector size\n");
			scanf("%d", &n);
			printf("Enter operation sign\n");
			printf("Sign: ");
			scanf(" %c", &sign);
			if (sign == '+' || sign == '-' || sign == '*') {
				switch (sign) {
				case '+':
					A = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
						printf("Enter first vector coordinates\n", i);
						scanf("%f", &A[i]);
					}
					B = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
						printf("Enter second vector coordinates\n", i);
						scanf("%f", &B[i]);
					}
					for (i = 0; i < n; i++) {
						printf("%f", A[i] + B[i]);
					}
					break;
					free(A);
					free(B);
				case '-':
					A = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
						printf("Enter first vector coordinates\n", i);
						scanf("%f", &A[i]);
					}
					B = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
						printf("Enter second vector coordinates\n", i);
						scanf("%f", &B[i]);
					}
					for (i = 0; i < n; i++) {
						printf("%f", A[i] - B[i]);
					}
					break;
					free(A);
					free(B);
				case '*':
					A = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
						printf("Enter first vector coordinates\n", i);
						scanf("%f", &A[i]);
					}
					B = malloc(n * sizeof(float));
					for (i = 0; i < n; i++) {
						printf("Enter second vector coordinates\n", i);
						scanf("%f", &B[i]);
					}
					for (i = 0; i < n; i++) {
						rezult = A[i] * B[i];
						sum = sum + rezult;
					}
					printf("%f", &sum);
					break;
					free(A);
					free(B);
				}
			} else
				printf("Wrong sign");
			    break;
		}
		printf("Repeat?/n");
		scanf("%d", &d);
	}
	return 0;
}
